<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp"
    tools:context=".CalendarEventArticleFragment" >

    <TextView
        android:id="@+id/calendar_article_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/bg_gray"
        android:padding="5dp"
        android:textColor="@color/blue"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/calendar_article_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/bg_gray"
        android:padding="5dp" />
    <TextView
        android:id="@+id/calendar_article_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/bg_gray"
        android:padding="5dp" />
	<TextView
	    android:id="@+id/calendar_article_location"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="3dp"
        android:background="@color/bg_gray"
        android:padding="5dp"/>
	<TextView
	    android:id="@+id/calendar_article_contact"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="3dp"
        android:background="@color/bg_gray"
        android:padding="5dp"/>
	
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:fillViewport="true"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/calendar_article_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_gray"
            android:padding="5dp"
            android:textSize="18sp" />
    </ScrollView>
	
</LinearLayout>